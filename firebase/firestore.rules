rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /user/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if request.auth.uid == document;
    }

    match /eventos/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if resource.data.divulgador == /databases/$(database)/documents/user/$(request.auth.uid);
      allow delete: if resource.data.divulgador == /databases/$(database)/documents/user/$(request.auth.uid);
    }

    match /eventos_confirmacoes/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /categorias/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }
  }
}
